            <Button Content="Удалить" Width="80" Margin="5" Click="Buutton_delite_reques"/>
        </StackPanel>
        <StackPanel>
            <ListBox Name="BoxProduct" SelectionChanged="Selection_request"/>
        </StackPanel>
    </DockPanel>
</Window>
